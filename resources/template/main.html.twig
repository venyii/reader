{% extends 'struct.html.twig' %}

{% block main %}
    <header>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="brand" href="/"><i class="icon-book"></i> Reader</a>

                    <form action="/search" class="input-append" method="post" style="margin: 0 auto;">
                        <input autocomplete="off" name="search" class="input-medium" type="text" placeholder="{{ 'Search'|trans }}"/>
                        <button type="submit" class="btn">
                            <i class="icon-search"></i>
                        </button>
                    </form>

                    <ul class="nav user_menu pull-right">
                        <li>
                            <a href="#modal-info-box" data-toggle="modal">
                                <i class="icon-info-sign"></i>
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="icon-flag"></i> <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/locale/de_DE">{{ 'locale_de_DE'|trans }}</a>
                                </li>
                                <li>
                                    <a href="/locale/en_GB">{{ 'locale_en_GB'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                        <li><a href="{{ path('settings_view') }}" class="pjaxable"><i class="icon-cogs"></i> Settings</a></li>
                    </ul>

                    <ul class="nav">
                        <li>
                            <a href="#add-subscription" data-toggle="modal" class="add-subscription">
                                <i class="icon-plus"></i> Add Subscription
                            </a>
                        </li>
                        <!---<li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <i class="icon-list-alt icon-white"></i>
                                Navigation <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/">Sub nav</a></li>
                            </ul>
                        </li>-->
                    </ul>
                </div>
            </div>
        </div>
        <div id="modal-info-box" class="modal hide fade" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">Keyboard Shortcuts</h3>
            </div>
            <div class="modal-body">
                <p>One fine body…</p>
            </div>
            <div class="modal-footer">
                <button class="btn">Got It!</button>
            </div>
        </div>
    </header>

    <div class="main-content">
        {% block content %}{% endblock %}
    </div>

    {% block sidebar %}{% endblock %}
{% endblock %}
<div class="row-fluid">
    <div id="site-collect" class="span12">
        <h3 class="page-title">Collect Subscriptions</h3>

        <div class="alert alert-warning">
            {{ 'collect_cron_info'|trans }}
        </div>

        <div class="btn-toolbar list-toolbar">
            <div class="btn-group">
                <button class="btn btn-rdef collect-select-all"><i class="icon-check"></i></button>
                <button class="btn btn-rdef collect-select-all"><i class="icon-check-empty"></i></button>
            </div>

            <div class="btn-group">
                <button class="btn btn-rdef dropdown-toggle" data-toggle="dropdown">
                    <i class="icon-cog"></i>
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a href="#">A1</a>
                    </li>
                    <li>
                        <a href="#">B2</a>
                    </li>
                    <li>
                        <a href="#">C3</a>
                    </li>
                </ul>
            </div>
        </div>

        <select multiple class="form-control" id="collect-ms" name="asdf" size="12">
            {% for sub in subscriptions %}
            <option value="{{ sub.id }}">{{ sub.name }}</option>
            {% endfor %}
        </select>

        {#
        <ul class="inline nav nav-pills">
            {% for sub in subscriptions %}
                <li data-sub-id="{{ sub.id }}">
                    <a href="">
                        <i class="icon-check-empty"></i>

                        {% if sub.icon %}
                            <img src="/static/img/subscription-icons/gen/{{ sub.icon }}" alt=""/>
                        {% else %}
                            <img src="/static/img/subscription-icons/default.png" alt=""/>
                        {% endif %}

                        {% if true or sub.error %}
                            {{ sub.name }}
                        {% else %}
                            <span class="alert-danger">{{ sub.name }}</span>
                        {% endif %}
                    </a>
                </li>
            {% endfor %}
        </ul>
        #}

        <button name="collect" class="btn btn-rdef">Collect Subsriptions</button>
        <div class="collect-result"></div>
    </div>
</div>
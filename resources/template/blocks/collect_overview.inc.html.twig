<div class="row-fluid">
    <div id="site-collect" class="span12">
        <h3>Collect Subscriptions</h3>
        <ul class="inline nav nav-pills">
            {% for sub in subscriptions %}
                <li data-sub-id="{{ sub.id }}">
                    <a href="">
                        {#<input type="checkbox"/>#}
                        {% if sub.icon %}
                            <img src="/static/img/subscription-icons/gen/{{ sub.icon }}" alt=""/>
                        {% else %}
                            <img src="/static/img/subscription-icons/default.png" alt=""/>
                        {% endif %}
                        {{ sub.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
        <button name="collect" class="btn">Collect Subsriptions</button>
        <div class="progress progress-striped active">
            <div class="bar"></div>
        </div>
        <div class="collect-result"></div>
    </div>
</div>